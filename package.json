{
  "name": "@perspective-ai/mcp",
  "version": "0.0.2",
  "description": "Perspective AI MCP Extension for Claude Desktop",
  "main": "server.js",
  "scripts": {
    "pack": "npx -y @anthropic-ai/mcpb pack && mv perspective-mcp.mcpb perspective.mcpb",
    "start": "node server.js",
    "version": "node -e \"const m=require('./manifest.json');m.version='$npm_package_version';require('fs').writeFileSync('./manifest.json',JSON.stringify(m,null,2)+'\\n')\" && git add manifest.json",
    "release": "npm version patch && git push && git push --tags"
  },
  "keywords": [
    "mcp",
    "claude",
    "perspective",
    "ai",
    "research"
  ],
  "author": "Perspective AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Perspective-AI/perspective-mcp.git"
  },
  "homepage": "https://getperspective.ai",
  "bugs": {
    "url": "https://github.com/Perspective-AI/perspective-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3"
  }
}
